# Environment Variables for Backend
# Copy this file to .env and fill in your values

# FOR LOCAL DEVELOPMENT - No database URL needed (SQLite is used automatically)
# FOR PRODUCTION - Get this from your hosting provider

# Database URL (Leave empty for local development with SQLite)
# For Render: Get this from your PostgreSQL database on Render
# For Railway: Get this from your PostgreSQL add-on
# For Heroku: Get this from DATABASE_URL environment variable
DATABASE_URL=

# Secret key for JWT tokens
# Generate a secure random string (32+ characters)
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# OpenAI API Key for natural language processing
OPENAI_API_KEY=
# Debug mode (set to false in production)
DEBUG=false